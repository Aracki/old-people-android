<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pozadina1"
    android:orientation="vertical" 
    android:weightSum="12">

           
    
        <Button
            android:id="@+id/btnPodaciRodjendani"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="2"
            android:background="@drawable/rectangle"
            android:text="RODJENDANI"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPodaciLekar"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:layout_weight="2"
            android:background="@drawable/rectangle"
            android:text="LEKAR"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPodaciSlave"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:layout_weight="2"
            android:background="@drawable/rectangle"
            android:text="SLAVE"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />
        
        <Button
            android:id="@+id/btnPodaciPomeni"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:layout_weight="2"
            android:background="@drawable/rectangle"
            android:text="POMENI"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />
        
          <Button
            android:id="@+id/btnPodaciNazad"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:layout_weight="2"
            android:background="@drawable/rectangle"
            android:text="NAZAD"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />




</LinearLayout>